%section
  .wrapper
    .section-heading
      %h3 Inputs
      %p Some basic forms
  .wrapper.component-inputs
    %fieldset
      .textarea
        %label Text Area
        %textarea.textarea
      .input-long
        %label Long Input
        %input.input-long{:type=>"text"}
      .input-short
        %label Short input
        %input.input-short{:type=>"text"}
      .input-short
        %label Short input
