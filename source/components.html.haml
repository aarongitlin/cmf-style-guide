%section
  .wrapper
    .section-heading
      %h3 header
      %p a general page header
  .component-header
    .header-wrapper
      %h1.title Heading Title Goes Here
      .header-card 
        %h3.card-title Card Title here
        .card-button-group
          %button.primary-button Primary Button
          %button.secondary-button Secondary Button
        .card-secondary-links
          %a.card-link Secondary card link here
    .secondary-action-bar 
      .wrapper
        %a{:href=>"#"} extra link here >

